---
'':
  - type: A
    value: {{ hostvars.gateway.eth2 }}
    ttl: 3600
  - type: MX
    values:
      - exchange: {{ mail.letsbuildthe_cloud.forwarders.0.host }}
        preference: {{ mail.letsbuildthe_cloud.forwarders.0.weight }}
      - exchange: {{ mail.letsbuildthe_cloud.forwarders.1.host }}
        preference: {{ mail.letsbuildthe_cloud.forwarders.1.weight }}
    ttl: 3600
  - type: TXT
    values:
      - {{ mail.letsbuildthe_cloud.txt }}
      - "{{ mail.letsbuildthe_cloud.spf }}"
    ttl: 3600
{{ mail.letsbuildthe_cloud.dkim.host }}:
  type: CNAME
  value: {{ mail.letsbuildthe_cloud.dkim.value }}
att:
  type: A
  value: {{ hostvars.gateway.eth2 }}
  ttl: 3600
xfinity:
  type: A
  value: {{ hostvars.gateway.eth0 }}
  ttl: 3600
digitalocean:
  type: NS
  values:
    - ns1.digitalocean.com.
    - ns2.digitalocean.com.
    - ns3.digitalocean.com.
