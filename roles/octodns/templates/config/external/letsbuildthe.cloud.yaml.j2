---
'':
  - type: A
    value: {{ hostvars.gateway.eth2 }}
    ttl: 3600
  - type: MX
    values:
      - exchange: {{ mail.forwarders.0.host }}
        preference: {{ mail.forwarders.0.weight }}
      - exchange: {{ mail.forwarders.1.host }}
        preference: {{ mail.forwarders.1.weight }}
    ttl: 3600
  - type: TXT
    values:
      - forward-email={{ mail.email }}
      - {{ mail.spf }}
    ttl: 3600
att:
  type: A
  value: {{ hostvars.gateway.eth2 }}
  ttl: 3600
xfinity:
  type: A
  value: {{ hostvars.gateway.eth0 }}
  ttl: 3600
digitalocean:
  type: NS
  values:
    - ns1.digitalocean.com.
    - ns2.digitalocean.com.
    - ns3.digitalocean.com.
