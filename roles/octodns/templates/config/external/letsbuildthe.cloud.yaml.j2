---
'':
  - type: A
    value: {{ hostvars.gateway.eth2 }}
    ttl: 3600
  - type: MX
    values:
      - exchange: mx1.forwardemail.net.
        preference: 10
      - exchange: mx2.forwardemail.net.
        preference: 20
    ttl: 3600
  - type: TXT
    value: forward-email={{ me.email.personal }}
    ttl: 3600
att:
  type: A
  value: {{ hostvars.gateway.eth2 }}
  ttl: 3600
xfinity:
  type: A
  value: {{ hostvars.gateway.eth0 }}
  ttl: 3600
digitalocean:
  type: NS
  values:
    - ns1.digitalocean.com.
    - ns2.digitalocean.com.
    - ns3.digitalocean.com.
